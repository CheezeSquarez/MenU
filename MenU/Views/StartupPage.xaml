<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenU.Views.StartupPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid Padding="0" >
            <Image Source="Startup_bg.png" Grid.Column="0" VerticalOptions="FillAndExpand" HorizontalOptions="StartAndExpand" Aspect="AspectFill" />
            <StackLayout VerticalOptions="End" HorizontalOptions="Center" Grid.Column="0" Grid.Row="0" Padding="0" Spacing="-60" HeightRequest="200" >
                <Image Source="loading.gif" IsAnimationPlaying="True" Margin="0" Opacity="0.8" VerticalOptions="End" Scale="0.35" />
                <Label Text="{Binding RandomText}" FontSize="20" FontFamily="Staatliches" Margin="0" HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>